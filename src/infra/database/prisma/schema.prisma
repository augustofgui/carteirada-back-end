generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String            @id @default(uuid())
  name            String
  login           String            @unique
  email           String            @unique
  password        String
  telephone       String
  createdAt       DateTime          @default(now())
